<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="3.0"
         metadata-complete="true" xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <display-name>cs</display-name>

    <!-- 定义webAppRootKey 防止多个工程冲突,主要由log4j引发 -->
    <context-param>
        <param-name>webAppRootKey</param-name>
        <param-value>cs</param-value>
    </context-param>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
            classpath*:spring/*.xml
        </param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <filter>
        <filter-name>watcherFilter</filter-name>
        <filter-class>com.yiji.framework.watcher.adaptor.web.WatcherFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>watcherFilter</filter-name>
        <url-pattern>/watcher/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>WatcherServlet</servlet-name>
        <servlet-class>com.yiji.framework.watcher.adaptor.web.WatcherServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WatcherServlet</servlet-name>
        <url-pattern>/watcher/*</url-pattern>
    </servlet-mapping>
</web-app>
